<%- include('./layout/header.ejs')%>
  <body>
    <%- include('./layout/navbar.ejs')%>  
    <div class="container-fluid">
         <!-- grid -->
      <div class="row contacts justify-content-center">
        <div class="col-11 col-xl-9 col-xxl-7 d-flex flex-column align-items-center justify-content-center bg-transp-light rounded my-5 py-5">
          <div class="my-4">
            <h2 class=" text-uppercase">Get in touch</h2>
          </div>
          <div class="d-flex flex-column flex-md-row justify-content-md-around text-center w-100">
            <a href="" class="text-decoration-none d-block mb-4">
              <i class="bi bi-geo-alt-fill"></i>
              <br>
              <h3 class="text-uppercase">
                Adress
              </h3>
              <p>
                Piena iela 87, 
                Riga, 
                LV-1001
              </p>
            </a>
            <a href="" class="text-decoration-none d-block mb-4">
              <i class="bi bi-telephone-fill"></i>
            <br>
            <h3 class="text-uppercase">
              Phone
            </h3>
            <p>
              +371 20114562
            </p>
            </a>
            <a href="" class="text-decoration-none d-block">
              <i class="bi bi-envelope-fill"></i>
            <br>
            <h3 class="text-center text-uppercase">
              Email
            </h2>
            <p>
              info@bb-books.com
            </p>
            </a>
          </div>
        </div>     
      </div>
     
      <!--MAP-->
     
      <div class="row bg-color-dark">
        <div class="col mt-5 pt-4 px-0 map">
        <h2 class="text-center text-uppercase mb-4">Find us</h2>
        <div class="z-depth-1-half mb-3">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2174.7924818234146!2d24.102749615700517!3d56.96948710496556!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46eecfbf90d8bc9f%3A0x981e78b9570d9dd1!2sPiena%20iela%2087%2C%20Zieme%C4%BCu%20rajons%2C%20R%C4%ABga%2C%20LV-1045!5e0!3m2!1slv!2slv!4v1649103303541!5m2!1slv!2slv" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        </div>
      </div>

      <!-- message us -->
      <div class="row bg-color-blue message">
        <div class="my-5 py-5">
          <h2 class="text-center mb-5 text-uppercase fw-bold">Message us</h2>
          <form action="/contacts" method="POST" class="col col-sm-10 col-md-8 col-lg-6 col-xxl-4 mx-auto" id="message-us-form">
              <div class="row g-2">
                <div class="col">
                  <input name="first-name" type="text" class="form-control" id="firstName" placeholder="First name"
                  required>
                </div>
                <div class="col">
                  <input name="last-name" type="text" class="form-control" id="lastName" placeholder="Last name" required>
                </div>
                <div>
                  <input name="email" type="email" class="form-control" id="email" placeholder="Email address" required>
                </div>
                <div>
                  <textarea name="message" class="form-control" id="message" placeholder="Your message" rows="4" required></textarea>
                </div>
                <div>
                <button type="submit" class="btn btn-custom btn-light p-2 w-25 message-us-btn">
                  Send
                </button>
                </div>
              </div>  
          </form>
          <div class="col col-sm-10 col-md-8 col-lg-6 col-xxl-4 mx-auto text-center hide message-us-response"><p>We have received your message, <span class="fw-bold users-name"><%=usersName%></span>! We will get back to you soon.</p></div>
        </div>
      </div> 
    <%- include('./layout/footer.ejs')%> 
  </body>
</html>
